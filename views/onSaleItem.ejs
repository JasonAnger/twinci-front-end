        <script>
            let <%= id %> = document.getElementById("like-<%= id %>")
            <%= id %>.like = false
            <%= id %>.onclick = function() {
                if(<%= id %>.like==false) {
                    <%= id %>.getElementsByClassName('likeIcon')[0].getElementsByTagName('path')[0].style.stroke="#e43737"
                    <%= id %>.getElementsByClassName('likeIcon')[0].getElementsByTagName('path')[0].style.fill="#e43737"
                    <%= id %>.like = true
                } else {
                    <%= id %>.getElementsByClassName('likeIcon')[0].getElementsByTagName('path')[0].style.stroke="#565656"
                    <%= id %>.getElementsByClassName('likeIcon')[0].getElementsByTagName('path')[0].style.fill="transparent"
